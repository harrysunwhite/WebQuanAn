<body >
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img data-toggle="modal" data-target="#exampleModal" src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                <h3>Chào mừng bạn</h3>
                <p>Chỉ cần vài bước nữa là bạn có thể mua hàng</p>
                <a href="#!1" data-toggle="modal" data-target="#loginModal" class="btn btn-light text-dark">Đăng nhập</a>
            </div>
            <div class="col-md-8 register-right">
                <div class="col-12">
                  
                </div>


                <div class="tab-content" id="myTabContent">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="col-10 ml-auto p-2" >
                        <div class="row ">
                            <h4 class="m-auto">Tạo tài khoản mới</h4>
                        </div>
                        
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-12">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                       
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Input.Name"></label>
                                <input asp-for="Input.Name" class="form-control" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="Input.NgaySinh"></label>
                                <input asp-for="Input.NgaySinh" class="form-control" />
                                <span asp-validation-for="Input.NgaySinh" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="Input.Sdt"></label>
                                <input asp-for="Input.Sdt" class="form-control" />
                                <span asp-validation-for="Input.Sdt" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <div class="form-group">
                                    <label asp-for="Input.GioiTinh" class="control-label"></label>
                                    <select asp-for="Input.GioiTinh" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                                        <option value="0">Chọn giới tính</option>
                                    </select>
                                    <span asp-validation-for="Input.GioiTinh" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-12">
                                <label asp-for="Input.FacebookLink"></label>
                                <input asp-for="Input.FacebookLink" class="form-control" />
                                <span asp-validation-for="Input.FacebookLink" class="text-danger"></span>
                            </div>
                        </div>

                       

                        <div class="row text-center p-2">
                            <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                        </div>
                       
                    </form>

                </div>

            </div>
        </div>

    </div>
</body>


